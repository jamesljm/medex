
<hr>
<p></p>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Date</th>
      <th>Schedule</th>
      <th>Patient name</th>
    </tr>
    </thead>

    <tbody>
      <% @bookings_doc.each do |p| %> 
        <% if Date.strptime(p.date, '%m/%d/%Y') >= Date.today %>
          <tr>
            <td>
              <%= p.date %> 
            </td>
            <td>
               <%= p.start_time %> 
            </td>
            <td>
               <%= p.patient.first_name %> <%= p.patient.last_name %> 
            </td>
            <td>
              <%= link_to new_record_path, remote:true, class: 'btn btn-sm btn-info' do%>
              <span data-feather="edit"></span>
              Add Record
              <% end %>
            </td>
            <td> 
              <%= link_to 'Delete', booking_path(p), 
                remote:true,
                class: 'btn btn-sm btn-danger',
                method: :Delete, 
                data: {confirm: 'Are you sure?'}  %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>