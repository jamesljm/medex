<hr>
<p></p>

<% if @pending_bookings.count == 0 %>

  <p> No Bookings Pending Confirmation </p>

<% else %>

<table class="table table-hover">
    <thead>
    <tr>
        <th>Date</th>
        <th>Schedule</th>
        <th>Doctor name</th>
        <th>Status</th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    <% @pending_bookings.each do |p| %>
        <tr>
        <td>
            <%= p.date %>
        </td>
        <td>
            <%= p.start_time %>
        </td>
        <td>
            <%= link_to t(p.doctor.first_name + " " + p.doctor.last_name),  card_doctor_path(p.doctor.id),remote: true %>
        </td>
        <td>
            <button class="btn btn-sm btn-secondary" disabled>Pending Approval</button>
        </td>
        <td>
        <%= link_to 'Cancel Appointment', pending_booking_path(p), class: 'btn btn-sm btn-danger',method: :Delete, data: {confirm: 'Are you sure?'}, remote: true  %>
        </td>
        </tr>
        <% end %>
    </tbody>
</table>
<% end %>
