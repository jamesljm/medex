// =============================================================================
// Booking Show AJAX
// =============================================================================

<% if current_user.type == 'Patient' %>
  
  $('#dashboard-content').empty().removeClass('fade-in').addClass('fade-in').append('<%= j render "bookings/show" %>');

<% elsif current_user.type == 'Doctor' %>

  $('#dashboard-content').empty().removeClass('fade-in').addClass('fade-in').append('<%= j render "bookings/doctor_index" %>');

<% end %>
