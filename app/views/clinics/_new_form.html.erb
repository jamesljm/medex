
<%= form_for [@doctor,@clinic] do |f| %>

<ul class="list-group list-group-flush">
    <!-- Clinic Name -->
    <li class="list-group-item">
        <div class="field-wrap">
            <%= f.label :name do %>Name of Clinic:<span class="req">*</span><% end %>
            <%= f.text_field :name, class:'form-control' %>
        </div>
    </li>
    
    <!-- Clinic Phone -->
    <li class="list-group-item">
        <div class="field-wrap">
          <%= f.label :phone %>
          <%= f.text_field :phone, type: 'text', autocomplete: 'off', class:'form-control' %>
        </div>
    </li>

    <!-- Clinic Email -->
    <li class="list-group-item">
        <div class="field-wrap">
          <%= f.label :email %>
          <%= f.text_field :email, type: 'email', autocomplete: 'off', class:'form-control' %>
        </div>
    </li>

    <!-- Clinic Address -->
    <li class="list-group-item">
        <div class="field-wrap">
            <%= f.label :address do %>Address:<span class="req">*</span><% end %>
            <%= f.text_field :address, required: 'required', class:'form-control' %>
        </div>
    </li>

    <!-- Clinic Postcode -->
    <li class="list-group-item">
        <div class="field-wrap">
            <%= f.label :postcode do %>Postcode:<span class="req">*</span><% end %>
            <%= f.text_field :postcode, required: 'required',class:'form-control' %>
        </div>
    </li>

    <!-- Clinic City -->
    <li class="list-group-item">
        <div class="field-wrap">
            <%= f.label :city do %>City:<span class="req">*</span><% end %>
            <%= f.text_field :city, required: 'required', class:'form-control' %>
        </div>
    </li>

    <!-- Clinic State -->
    <li class="list-group-item">
        <div class="field-wrap">
            <%= f.label :state do %>State:<span class="req">*</span><% end %>
            <%= f.text_field :state, required: 'required', class:'form-control' %>
        </div>
    </li>

    <!-- Clinic Country -->
    <li class="list-group-item">
        <div class="field-wrap">
            <%= f.label :country do %>Country:<span class="req">*</span><% end %>
            <%= f.text_field :country, required: 'required', class:'form-control' %>
        </div>
    </li>

    <!-- Clinic Operation Hour -->
    <li class="list-group-item">
        <div class="field-wrap">
        <%= f.fields_for :operation_hour do |op| %>
            <%= op.radio_button

        <% end %>
        </div>
    </li>

    <br>
    <!-- Submit Button -->
        <div class="btn-wrap ">
            <%= f.submit class: "button doctor-submit" %>
        </div>
<% end %>
</ul>