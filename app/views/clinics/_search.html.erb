<% @clinics.each_with_index do |clinic, i| %>
    <div class="col-md-6">
        <div class="card mb-4 box-shadow div-wrapper">
        <img class="card-img-top" src="https://unsplash.it/350/200?image=<%= (i + 1).to_s %>" alt="Card image cap">
        <div class="card-body">
            <h6>Clinic's Info</h6>
            <ul class="card-desc">
            <li><strong>Name : </strong><%= clinic.name %></li>
            <li><strong>Address : </strong><%= clinic.address %></li>
            <li><strong>City : </strong><%= clinic.city %></li>
            <li><strong>Postcode : </strong><%= clinic.postcode %></li>
            <li><strong>Country : </strong><%= clinic.country %></li>
            <li><strong>State : </strong><%= clinic.state %></li>
            <li><strong>Phone : </strong><%= clinic.phone %></li>
            <li><strong>Email : </strong><%= clinic.email %></li>
            <li><strong>Fee : </strong><%= clinic.fee %></li>
            <li><strong>Bookable : </strong><%= clinic.booking %></li>
            </ul>
            <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <%= link_to "Book This", new_pending_booking_path(doctor_id: clinic.doctor_id, clinic_id: clinic.id), remote: true, id: 'pending-booking-btn', class: 'btn btn-primary' %>
            </div>
            <small class="text-muted"></small>
            </div>
        </div>
        </div>
    </div>
    <% end %>