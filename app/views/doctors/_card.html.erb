<div class="container">
  <div><%= link_to 'View all Doctor', doctors_path, remote: true %></div>
  <div><%= link_to ("View Your Appointment"), booking_path(current_user.id), remote: true %></div>
  <div class="card-area">
    <div class="card-placard">
      <div class="card-social">
        <div class="card-image">
        </div>
        <div class="card-likes">
          <p>Total Like: <%= @like.count %> </p>
        </div>
      </div>

      <div class="card-highlights">
        <div class="card-contact card">
          <h3 class="card-title"> <%= @doctor.first_name + " " + @doctor.last_name %> </h3>
          <h4 class="card-subtitle mb-2 text-muted"> <%= @doctor.specialist %> </h4>
          <%= mail_to @doctor.email %>
          <br>
          <hr>
        </div>
        <div class="card-actionable">
          <div class="like ">
            <%= link_to 'Like', likes_path+'?param12='+@doctor.id.to_s, method: :POST, remote: true %>
          </div>
          <div class="unlike">
            <%= link_to 'Unlike', likes_path+'?param13='+@doctor.id.to_s, remote: true %>
          </div>
        </div>

      </div>

    </div>

    <div class="card-selector">
      <div class="card-general">
        Info
      </div>
      <div class="card-clinic">
        Clinic
      </div>
    </div>
    
    <div class="card-overview">
      <div class="card-detail">
        <div class="card-general-info">
          
        </div>
        <div class="card-clinic-info">
        </div>
      </div>

      <div class="booking">
      </div>

    </div>
  </div>
</div>
