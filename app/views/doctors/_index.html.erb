<h1>Doctor Index Page</h1>

<div>Doctor Panel</div>
<div>
  <%= link_to t("Back to Your DashBoard"),  patient_path(current_user.id) %>
</div>
<div>
  <%= link_to t("Back to Home Page"), root_path %>
</div>
<hr>
<div class="container">
  <% @doctors.each do |doctor| %>
    <img class="align-self-center mr-3" src="http://via.placeholder.com/350x150" alt="Generic placeholder image">
    <div class="media-body">
      <p class=mt-0>
        <%= doctor.first_name %>
        <%= doctor.last_name %>
      </p>
      <p class=mb-0>
        <%= doctor.specialist %>
      </p>
      <p class=mb-0>
        <%#= doctor.clinic_name %>
      </p>
      <p>
        <button>View</button>
        <button><%= link_to "Book An Appointment", 'pending_bookings/new?param1='+doctor.id.to_s %></button>
      </p>
    </div>
    <div>
      Profile Pic
    </div>
    <div>
      <%= doctor.first_name %>
      <%= doctor.last_name %>
      <%= doctor.specialist %>
      <%#= doctor.clinic_name %>
      <%#= link_to "Book An Appointment", 'pending_bookings/new?param1='+doctor.id.to_s %>
    </div>
  <% end %>
</div>
<div class="col-4">
  <div>Maps</div>
</div>