<div> Search Doctor by Name </div>
<%= form_tag search_doctors_path, method: :get do %>
<%= text_field_tag :search, nil, placeholder: "Search" %>
<%= submit_tag "Search", class: "btn btn-light my-2 my-sm-0" %>
<% end %>


<h1>Doctor Index Page</h1>

<div>Doctor Panel</div>
<div>
  <%= link_to t("Back to Your DashBoard"),  patient_path(current_user.id) %>
</div>
<div>
  <%= link_to t("Back to Home Page"), root_path %>
</div>
<hr>
<div class="container">
  <div class="row">
    <div class="col-8">
      <% @doctors.each do |doctor| %>

        <div class="media">
          <img class="align-self-center mr-3" src="http://via.placeholder.com/150x150" alt="Generic placeholder image">
          <div class="media-body">
            <p class=mt-0>
              <%= doctor.first_name %>
              <%= doctor.last_name %>
            </p>
            <p class=mb-0>
              <%= doctor.specialist %>
            </p>
            <!-- <p class=mb-0><%#= doctor.clinic_name %></p> -->
            <p>
              <button>View</button>
              <button>
                <%= link_to doctor_path(doctor.id), remote: true, id: 'profile-btn', class: 'nav-link active' do %>
                  <span data-feather="users"></span>
                  Profile
                  <span class="sr-only">(current)</span>
                <% end %>
              </button>
              <button>
                <%= link_to "Book An Appointment", pending_bookings_path+'/new?param1='+doctor.id.to_s, remote: true, id: 'pending-booking-btn' %>
              </button>
              </p>
            </p>

          </div>
        </div>
        <% end %>
    </div>
    <div class="col-4">
      <div>Maps</div>
    </div>
  </div>
</div>