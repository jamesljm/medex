        <% if !@prescriptions.empty? %>
            <% @prescriptions.each do |prescription| %>
            <% if !prescription.nil? %>
            <!-- TODO: Ascending the prescriptions' created date -->
                <div class="timeline-item">
                    <div class="timeline-content js--fadeInLeft">
                        <h2 class="tab-header"><%= prescription.drug_name %></h2>

                        <table class="table table-hover">  
                            <tr>
                                <td>Record Ref. :</td>
                                <td><%= prescription.record_id %></td>
                            </tr>
                            <tr>
                                <td>Record Title :</td>
                                <td><%= prescription.record.title %></td>
                            </tr>          
                            <tr>
                                <td>Start Date :</td>
                                <td><%= prescription.pres_start_date %></td>
                            </tr>   
                            <tr>
                                <td>End Date :</td>
                                <td><%= prescription.pres_end_date %></td>
                            </tr>  
                            <tr>
                                <td>Dosage :</td>
                                <td><%= prescription.dosage %></td>
                            </tr>  
                            <tr>
                                <% if prescription.meal == 1 %>
                                    <td>To be taken :</td>
                                    <td><%= "Before meals" %></td>
                                <% else %>
                                    <td>To be taken :</td>
                                    <td><%= "After meals" %></td>
                                <% end %>  
                            </tr>
                            <tr>
                                <td>Intake :</td>
                                <td>
                                    <table class="table table-hover">
                                        <tr>
                                            <th>Morning</th>
                                            <th>Noon</th>
                                            <th>Night</th>
                                        </tr>
                                        <tr>
                                            <td><%= prescription.morning %></td>
                                            <td><%= prescription.noon %></td>
                                            <td><%= prescription.night %></td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>  
                        </table>
                    </div>
                </div>
            <% end %>
            <% end %>
        <% else %>
            <p>There's no prescription</p>
        <% end %>