<!-- JS -->
<%= provide :js do %>

    <!-- initial dashboard partial load -->
    <script>
        $(document).on('turbolinks:load', function () {
            $('#dashboard-content').empty().append('<%= j render "patients/profile" %>');
        });
    </script>

<% end %>

<% content_for :sidebar do %>
    <li class="nav-item">
        <!-- patients/show -->
        <%= link_to profile_patient_path(params[:id]), remote: true, id: 'profile-btn', class: 'nav-link' do %>
            <span data-feather="user"></span>
            Profile
            <span class="sr-only">(current)</span>
        <% end %>
    </li>
    <li class="nav-item">
        <!-- doctors/index -->
        <%= link_to doctors_path, remote: true, id: 'search-doctors-btn', class: 'nav-link' do %>
            <span data-feather="search"></span>
            Search Doctors
        <% end %>
    </li>
    <li class="nav-item">
        <!-- doctors/index -->
        <%= link_to doctor_clinics_path(1), remote: true, id: 'search-clinics-btn', class: 'nav-link' do %>
            <span data-feather="home"></span>
            Search Clinics
            <% end %>
    </li>
    <li class="nav-item">
        <!-- bookings/show -->
        <%= link_to booking_path(params[:id]), remote: true, id: 'appointments-btn', class: 'nav-link' do %>
            <span data-feather="calendar"></span>
            Appointments
        <% end %>
    </li>
    <li class="nav-item">
        <!-- records/show -->
        <%= link_to record_path(params[:id]), remote: true, id: 'records-btn', class: 'nav-link' do %>
            <span data-feather="book-open"></span>
            Medical Journal
        <% end %>
    </li>
    <li class="nav-item">
        <!-- prescription/show -->
        <%= link_to record_prescriptions_path(1), remote: true, id: 'prescriptions-btn', class: 'nav-link' do %>
            <span data-feather="plus-circle"></span>
            Prescriptions
        <% end %>
    </li>
<% end %>

<%= render "layouts/dashboard" %>


