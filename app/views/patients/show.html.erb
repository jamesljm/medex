<!--stylesheet-->
<%= provide :head do %>
    <%= stylesheet_link_tag "dashboard", :media => "all", media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<% end %>

<!-- JS -->
<%= provide :js do %>

    <!-- initial dashboard load -->
    <script>
        $(document).on('turbolinks:load', function () {
            $('#dashboard-content').append('<%= j render "patients/edit" %>');
        });
    </script>

<% end %>

<!-- Top navbar -->
<nav class="navbar navbar-expand-sm navbar-light sticky-top bg-light d-flex justify-content-between">
    <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">Medex</a>
