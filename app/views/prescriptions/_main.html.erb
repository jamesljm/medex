<h1>Your current prescriptions</h1>
<div class="container">
    <div class="row">
        <% @prescriptions.each do |p| %>
            <% p.each do |p1| %>
                <% if p1.pres_end_date !=nil && p1.pres_end_date > Date.today %>
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <div><%= p1.drug_name %></div>
                            <div><%= p1.record_id %></div>
                            <div><%# <%= p1.record.booking.doctor.last_name %></div>
                            <div><%= p1.pres_start_date %></div>
                            <div><%= p1.pres_end_date %></div>
                            <div><%= p1.dosage %></div>
                            <div>
                                <% if p1.meal == 1 %>
                                    <%= "Before meals" %>
                                <% else %>
                                    <%= "After meals" %>
                                <% end %>    
                            </div>
                            <div><h5>Intake</h5>
                                <div class="col-mb-12"><%= p1.morning %></div>
                                <div class="col-mb-12"><%= p1.noon %></div>
                                <div class="col-mb-12"><%= p1.night %></div>
                            </div>
                            

                            <%= link_to "Edit", edit_record_prescription_path(p1.record_id, p1.id), remote: true %>
                            <%= link_to "Delete", record_prescription_path(p1.record_id, p1.id), method: :delete %>
                        </div>    
                    </div>
                <% end %>            
            <% end %>
        <% end %>
    </div>

