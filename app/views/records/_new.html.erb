<h1 class="blue-font">Create New Patient / Encounter Record</h1>

<%= form_for @record do |f| %>

    <h3 class="blue-font">Logistics</h3>
    
    <%# ====== form created by doc, import existing info from booking ===== %>
    <% if @user.type == "Doctor" %>

        <div><% @booking.id %></div>

        
    
    <%# ====== patient new form ===== %>
    <% else %>

        <div class="form-group">
            <div><%= f.label :record_date %></div>
            <div><%= f.date_field :record_date, autofocus: true %></div>
        </div>

    <% end %>


    <div class="form-group">
        <div><%= f.label :title %></div>
        <div><%= f.text_field :title, autofocus: true %></div>
    </div>

    <div class="form-group">
        <div><%= f.label :encounter %></div>
        <div class="checkbox">
            <div><%= f.check_box :encounter, {multiple: true}, "Consultation", nil %> Consultation </div>
        </div>
        <div class="checkbox">
            <div><%= f.check_box :encounter, {multiple: true}, "Procedures", nil %> Procedures </div>
        </div>
        <div class="checkbox">
            <div><%= f.check_box :encounter, {multiple: true}, "Followup", nil %> Follow up </div>
        </div>
        <div class="checkbox">
            <div><%= f.check_box :encounter, {multiple: true}, "Immunizations", nil %> Immunizations </div>
        </div>
        <div class="checkbox">
            <div><%= f.check_box :encounter, {multiple: true}, "Labtests", nil %> Lab tests </div>
        </div>
    
    </div>

    <div class="form-group">
        <div><%= f.label :symptoms %></div>
        <div><%= f.text_field :symptoms %></div>
    </div>

    <div class="form-group">
        <div><%= f.label :diagnosis %></div>
        <div><%= f.text_field :diagnosis %></div>
    </div>   

    <div class="form-group">
        <div><%= f.label :note %></div>
        <div><%= f.text_field :note %></div>
    </div>     

    <div class="form-group">
        <!-- radio button for follow up true false -->
        <div><%= f.label :follow_up %></div>

        <div class="radio">
            <div><%= f.radio_button :follow_up, true %> yes</div>
        </div>

        <div class="radio">
            <div><%= f.radio_button :follow_up, false %> no</div>
        </div>
    </div>

    <div class="form-group">
        <!-- radio button for follow up true false -->
        <div><%= f.label :referral %></div>

        <div class="radio">
            <div><%= f.radio_button :referral, true %> yes</div>
        </div>

        <div class="radio">
            <div><%= f.radio_button :referral, false %> no</div>
        </div>
    </div>

    <div class="form-group">
        <div><%= f.label :referral_note %></div>
        <div><%= f.text_field :referral_note %></div>
    </div>     
    
    <div><%= f.submit "Save Record" %></div>

<% end %>
