<div class="container div-wrapper">

<h1 class="blue-font">Create New Patient / Encounter Record</h1>




<%= form_for @record, remote:true do |f| %>
<div class="col-lg-5 order-lg-1 div-wrapper">    
    <%# ====== form created by doc, import existing info from booking ===== %>
    <% if @user.type == "Doctor" %>

        <div><%= f.label 'Booking ID:' %> <%= @booking.id %></div>
        <div><%= f.label ' Doctor Name: '%><%= Doctor.find(:booking_id => @booking.id).name %></div>

        
    
    <%# ====== patient new form ===== %>
    <% else %>

        <div class="form-group">
            <div><%= f.label :record_date %></div>
            <div><%= f.date_field :record_date, autofocus: true %></div>
        </div>

    <% end %>


    <div class="form-group">
        <div><%= f.label :title %></div>
        <div><%= f.text_field :title, autofocus: true %></div>
    </div>

    <div class="form-group">
        <div><%= f.label :encounter %></div>
        <div class="checkbox">
            <div><%= f.check_box :encounter, {multiple: true}, "Consultation", nil %> Consultation </div>
        </div>
        <div class="checkbox">
            <div><%= f.check_box :encounter, {multiple: true}, "Procedures", nil %> Procedures </div>
        </div>
        <div class="checkbox">
            <div><%= f.check_box :encounter, {multiple: true}, "Followup", nil %> Follow up </div>
        </div>
        <div class="checkbox">
            <div><%= f.check_box :encounter, {multiple: true}, "Immunizations", nil %> Immunizations </div>
        </div>
        <div class="checkbox">
            <div><%= f.check_box :encounter, {multiple: true}, "Labtests", nil %> Lab tests </div>
        </div>
    
    </div>

    <div class="form-group">
        <div><%= f.label :symptoms %></div>
        <div><%= f.text_field :symptoms %></div>
    </div>

    <div class="form-group">
        <div><%= f.label :diagnosis %></div>
        <div><%= f.text_field :diagnosis %></div>
    </div>   

    <div class="form-group">
        <div><%= f.label :note %></div>
        <div><%= f.text_field :note %></div>
    </div>     

    <div class="form-group">
        <!-- radio button for follow up true false -->
        <div><%= f.label :follow_up %></div>

        <div class="radio">
            <div style="margin-left:2vw"><%= f.radio_button :follow_up, true %> yes</div>
        </div>

        <div class="radio">
            <div style="margin-left:2vw"><%= f.radio_button :follow_up, false %> no</div>
        </div>
    </div>

    <div class="form-group">
        <!-- radio button for follow up true false -->
        <div><%= f.label :referral %></div>

        <div class="radio">
            <div style="margin-left:2vw"><%= f.radio_button :referral, true %> yes</div>
        </div>

        <div class="radio">
            <div style="margin-left:2vw"><%= f.radio_button :referral, false %> no</div>
        </div>
    </div>

    <div class="form-group">
        <div><%= f.label :referral_note %></div>
        <div><%= f.text_field :referral_note %></div>
    </div>     
</div>

<div class="col-lg-6 order-lg-2 div-wrapper" style="margin-left: 2em">
    <div tab-header>
        <h3 class="blue-font">Prescriptions</h3>
    </div>

        <%= f.fields_for :prescriptions do |p| %>
    <div class="form-group">
        <div><%= p.label :drug_name %></div>
        <div><%= p.text_field :drug_name, autofocus: true %></div>
    </div>

    <div class="form-group">
        <div><%= p.label :dosage %></div>
        <div><%= p.text_field :dosage %></div>
    </div>

    <div class="form-group">
        <div><%= p.label :pres_start_date %></div>
        <div><%= p.date_field :pres_start_date %></div>
    </div>

    <div class="form-group">
        <div><%= p.label :pres_end_date %></div>
        <div><%= p.date_field :pres_end_date %></div>
    </div>

    <div class="form-group">
        <div><%= p.label :meal %></div>
        <div class="radio">
            <div><%= p.radio_button :meal, true  %>Before meal</div>
        </div>
        <div class="radio">
            <div><%= p.radio_button :meal, false %>After meal</div>
        </div>
    </div>

    <div>Intake for each session
        <div class="form-group">
            <div><%= p.label :morning %></div>
            <div><%= p.text_field :morning %></div>
        </div>
        <div class="form-group">
            <div><%= p.label :noon %></div>
            <div><%= p.text_field :noon %></div>
        </div> 
        <div class="form-group">
            <div><%= p.label :night %></div>
            <div><%= p.text_field :night %></div>
        </div>   
    </div>
    <% end %>
    
<!-- </div> -->
    <div><%= f.submit "Save Record", class: "btn btn-sm btn-info" %></div>
</div>


<% end %>


</div>
