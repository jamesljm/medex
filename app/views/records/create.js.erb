<% if current_user.type == 'Doctor' %>
    $('#dashboard-content').empty().removeClass('fade-in').addClass('fade-in').append('<%= j render "patients/patient_card" %>');
<% elsif current_user.type == 'Patient' %>
    $('#dashboard-content').empty().removeClass('fade-in').addClass('fade-in').append('<%= j render "records/show" %>');
<% end %>